---
const { exp, index } = Astro.props;
const alignment =
  index % 2 === 0 ? "md:pr-12 text-left" : "md:order-2 md:pl-12 text-left";
---

<div
  class={`relative flex flex-col md:flex-row gap-8 md:gap-0 animate-on-scroll delay-${index * 200}`}
>
  <div class={`md:w-1/2 ${alignment}`}>
    <div
      class="bg-dark-100 p-6 rounded-2xl border border-zinc-800 h-full shadow-lg hover:shadow-primary-400/20 transition-shadow"
    >
      <span
        class="inline-block px-3 py-1 bg-primary-900/30 text-primary-400 text-xs rounded-full mb-3 font-medium"
      >
        {exp.period} â€¢ {exp.periodTotal}
      </span>
      <h3 class="text-xl font-semibold mb-1">{exp.titleProject}</h3>
      <p class="text-sm text-primary-300 font-medium mb-1">{exp.role}</p>
      <p class="text-zinc-400 text-sm mb-3 italic">{exp.company}</p>
      <p class="text-zinc-300 mb-4">{exp.description}</p>
      {
        exp.features?.length > 0 && (
          <ul class="list-disc text-sm text-zinc-400 pl-5 space-y-1">
            {exp.features.map((item: string) => (
              <li>{item}</li>
            ))}
          </ul>
        )
      }
    </div>
  </div>

  <div class="md:w-1/2 relative">
    <div
      class="absolute top-6 left-0 md:left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary-500 rounded-full z-10 shadow-[0_0_0_6px_rgba(139,92,246,0.2)]"
    >
    </div>
  </div>
</div>
