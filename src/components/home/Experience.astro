---
import { experiences } from "../../data/experience";
import ExperienceItem from "./ExperienceItem.astro";
---

<section id="experience" class="py-24 bg-dark-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <div class="animate-on-scroll">
      <div class="flex items-center gap-2 text-primary-400 mb-4">
        <div class="h-px w-12 bg-primary-400"></div>
        <span class="font-mono text-sm tracking-wider">EXPERIENCIA</span>
      </div>
      <h2 class="text-3xl sm:text-4xl font-bold mb-12">
        Mi <span class="text-primary-400">trayectoria</span> profesional
      </h2>
    </div>

    <div class="relative">
      <div
        class="absolute left-0 md:left-1/2 transform md:-translate-x-1/2 h-full w-px bg-zinc-800"
      >
      </div>
      <div class="space-y-16">
        {
          experiences.map((exp, index) => (
            <ExperienceItem exp={exp} index={index} />
          ))
        }
      </div>
    </div>
  </div>
</section>
