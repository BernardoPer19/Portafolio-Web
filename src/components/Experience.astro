---
const experiences = [
  {
    title: "Frontend Developer",
    company: "Empresa 1",
    period: "2023 - Presente",
    description: "Desarrollando interfaces de usuario interactivas con React y implementando soluciones escalables para aplicaciones web empresariales."
  },
  {
    title: "Web Developer (Freelance)",
    company: "Proyectos Independientes",
    period: "2022 - 2023",
    description: "Diseño y desarrollo de sitios web personalizados para clientes de diversas industrias, utilizando tecnologías modernas y buenas prácticas."
  }
];
---

<section id="experience" class="py-24 bg-dark-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <div class="animate-on-scroll">
      <div class="flex items-center gap-2 text-primary-400 mb-4">
        <div class="h-px w-12 bg-primary-400"></div>
        <span class="font-mono text-sm tracking-wider">EXPERIENCIA</span>
      </div>
      
      <h2 class="text-3xl sm:text-4xl font-bold mb-12">
        Mi <span class="text-primary-400">trayectoria</span> profesional
      </h2>
    </div>
    
    <div class="relative">
      {/* Timeline line */}
      <div class="absolute left-0 md:left-1/2 transform md:-translate-x-1/2 h-full w-px bg-zinc-800"></div>
      
      <div class="space-y-12">
        {experiences.map((exp, index) => (
          <div class={`relative flex flex-col md:flex-row gap-8 md:gap-0 animate-on-scroll delay-${index * 200}`}>
            <div class={`md:w-1/2 ${index % 2 === 0 ? 'md:pr-12 text-left' : 'md:order-2 md:pl-12 text-left md:text-right'}`}>
              <div class="bg-dark-100 p-6 rounded-lg border border-zinc-800 h-full">
                <span class="inline-block px-3 py-1 bg-primary-900/30 text-primary-400 text-xs rounded-full mb-4 font-medium">
                  {exp.period}
                </span>
                <h3 class="text-xl font-bold mb-2">{exp.title}</h3>
                <p class="text-zinc-400 text-sm mb-2">{exp.company}</p>
                <p class="text-zinc-300">{exp.description}</p>
              </div>
            </div>
            
            <div class="md:w-1/2 relative">
              {/* Timeline dot */}
              <div class="absolute top-6 left-0 md:left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary-500 rounded-full z-10 shadow-[0_0_0_6px_rgba(139,92,246,0.2)]"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>