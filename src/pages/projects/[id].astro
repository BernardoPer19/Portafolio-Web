---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { projects } from "../../data/projects";

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { id: project.id.toString() },
    props: { project },
  }));
}

const { project } = Astro.props;

if (!project) {
  return Astro.redirect("/404");
}
---

<Layout
  title={`${project.title} | Agustín Bernardo Peredo Rodriguez`}
  description={project.description}
>
  <Header />
  <main class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
      <div class="mb-8">
        <a
          href="/#projects"
          class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 transition-colors"
        >
          <span>Volver a proyectos</span>
        </a>
      </div>

      <div class="animate-fade-up animate-once animate-duration-[800ms]">
        <div class="mb-8">
          <span
            class="inline-block px-3 py-1 bg-primary-900/30 text-primary-400 text-xs rounded-full mb-4 font-medium"
          >
            {project.type}
          </span>
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
            {project.title}
          </h1>
          <p class="text-xl text-zinc-300 max-w-3xl">{project.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <div class="md:col-span-2">
            <div class="relative rounded-xl overflow-hidden aspect-video">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          <div class="bg-dark-100 border border-zinc-800 rounded-xl p-6 h-fit">
            <h2 class="text-xl font-bold mb-4">Información del proyecto</h2>

            <div class="space-y-4">
              <div>
                <h3 class="text-sm font-medium text-zinc-400 mb-2">
                  Tecnologías utilizadas
                </h3>
                <div class="flex flex-wrap gap-2">
                  {
                    project.technologies.map((tech) => (
                      <span class="px-2 py-1 text-xs font-medium bg-dark-200 text-primary-400 rounded-full">
                        {tech}
                      </span>
                    ))
                  }
                </div>
              </div>
              <section class="grid grid-cols-2 sm:grid-cols-2 gap-8 mb-6 mt-4">
                <div>
                  <h3 class="text-sm font-medium text-zinc-200 mb-1">
                    Tipo de proyecto
                  </h3>
                  <p class="text-zinc-400">
                    {project.type || "No especificado"}
                  </p>
                </div>

                <div>
                  <h3 class="text-sm font-medium text-zinc-200 mb-1">
                    Tiempo de desarrollo
                  </h3>
                  <p class="text-zinc-400">
                    {project.duration || "No especificado"}
                  </p>
                </div>

                <div>
                  <h3 class="text-sm font-medium text-zinc-200 mb-1">
                    ¿Colaborativo?
                  </h3>
                  <p class="text-zinc-400 mt-3">
                    {project.collaborative ? "Sí" : "No"}
                  </p>
                </div>
              </section>
              <div>
                <h3 class="text-md font-medium text-zinc-200 mb-2">Enlaces</h3>
                <div class="flex flex-col gap-2">
                  <a
                    href={project.demoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 mt-3 text-sm font-medium text-primary-400 hover:text-primary-300 transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="w-4 h-4"
                    >
                      <path
                        d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
                      ></path>
                      <path d="M15 3h6v6"></path>
                      <path d="m10 14 11-11"></path>
                    </svg>
                    <span>Ver demo en vivo</span>
                  </a>
                  <a
                    href={project.repoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 mt-3 text-sm font-medium text-primary-400 hover:text-primary-300 transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="w-4 h-4"
                    >
                      <path
                        d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                      ></path>
                      <path d="M9 18c-4.51 2-5-2-7-2"></path>
                    </svg>
                    <span>Ver código fuente</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="mb-12">
          <h2 class="text-2xl font-bold mb-6">Acerca del proyecto</h2>
          <div class="prose prose-lg prose-invert max-w-none">
            <p class="text-zinc-300">{project.longDescription}</p>
          </div>
        </div>

        <!-- NUEVA SECCIÓN FUNCIONALIDADES Y CARACTERÍSTICAS -->
        <section class="mb-12 grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h2 class="text-2xl font-bold mb-6">
              Funcionalidades implementadas
            </h2>
            <ul>
              {
                project.features?.length > 0 ? (
                  project.features.map((feature) => (
                    <li class="flex items-center gap-2 ">
                      <span style={{ color: "purple", fontWeight: "bold" }}>
                        ✔
                      </span>{" "}
                      {feature}
                    </li>
                  ))
                ) : (
                  <li>No hay características detalladas disponibles.</li>
                )
              }
            </ul>
          </div>
        </section>

        <div>
          <h2 class="text-2xl font-bold mb-6">Galería</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {
              project.gallery.map((image) => (
                <div class="relative rounded-xl overflow-hidden aspect-[4/3]">
                  <img
                    src={image}
                    alt={project.title}
                    class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                  />
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
